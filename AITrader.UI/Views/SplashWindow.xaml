<Window x:Class="AITrader.UI.Views.SplashWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AITrader.UI.Views"
        mc:Ignorable="d"
        Title="AITrader - Iniciando" Height="250" Width="450"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None" 
        AllowsTransparency="True"
        Background="#202020">
    <Border BorderBrush="#2196F3" BorderThickness="1" Margin="5">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Header -->
            <TextBlock Grid.Row="0" 
                      Text="AITrader" 
                      FontSize="28" 
                      FontWeight="Bold" 
                      Foreground="#2196F3" 
                      HorizontalAlignment="Center" 
                      Margin="0,20,0,0"/>
            
            <!-- Content -->
            <StackPanel Grid.Row="1" VerticalAlignment="Center">
                <TextBlock Text="Iniciando servicios..." 
                          Foreground="White" 
                          FontSize="16" 
                          HorizontalAlignment="Center" 
                          Margin="0,10"/>
                
                <ProgressBar Width="300" 
                            Height="10" 
                            IsIndeterminate="True" 
                            Margin="0,15" 
                            Background="Transparent"
                            Foreground="#2196F3"/>
                
                <TextBlock x:Name="StatusTextBlock" 
                          Text="Inicializando el motor de Python..." 
                          Foreground="#B0B0B0" 
                          FontSize="12" 
                          HorizontalAlignment="Center" 
                          TextWrapping="Wrap" 
                          Margin="20,5"/>
            </StackPanel>
            
            <!-- Footer -->
            <TextBlock Grid.Row="2" 
                      Text="Â© 2025 AITrader" 
                      Foreground="#B0B0B0" 
                      FontSize="10" 
                      HorizontalAlignment="Center" 
                      Margin="0,0,0,10"/>
        </Grid>
    </Border>
</Window>
